<Window x:Class="CardWizardWPF.RulesSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardWizardWPF"
        mc:Ignorable="d"
        Title="Select Rules Type" Height="200" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Select the type of rules:" FontSize="14" Margin="0,0,0,10"/>

        <RadioButton x:Name="RulesCardRadio" Content="Rules Card" IsChecked="True" />
        <RadioButton x:Name="RulesPageRadio" Content="Rules Page" />

        <Button Content="Submit" Width="100" Margin="10,15,10,0" HorizontalAlignment="Center" Click="Submit_Click"/>
    </StackPanel>
</Window>
