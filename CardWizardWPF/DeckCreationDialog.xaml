<Window x:Class="CardWizardWPF.DeckCreationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Deck" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter Deck Name:" Margin="0,0,0,5"/>
            <TextBox Name="DeckNameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Select Card Dimensions:" Margin="0,0,0,5"/>
            <RadioButton Name="Dimension1RadioButton" Content="6.35 x 8.89 cm" GroupName="CardDimensions" Margin="0,0,0,5"/>
            <RadioButton Name="Dimension2RadioButton" Content="8.6 x 5.9 cm" GroupName="CardDimensions" Margin="0,0,0,10"/>
            <Button Content="Create" Click="CreateButton_Click" HorizontalAlignment="Right" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
