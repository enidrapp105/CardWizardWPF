<Page x:Class="CardWizardWPF.TemplateCreatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardWizardWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TemplateCreatorPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="*" />
            <!-- Main content (Frame) -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <Label Content="Template Creator"/>
        <StackPanel  Name="commandBar" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="0" Margin="10">

        </StackPanel>

        <StackPanel Name="canvasholder" Grid.Row="1">

        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="3" Margin="10">
            <Button Content="Back" Width="200" Margin="5" Click="Template_Back_Button_Click"/>
            <Button Content="Save template" Width="200" Margin="5" Click="Template_Save_Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
