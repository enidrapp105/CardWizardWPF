<Page x:Class="CardWizardWPF.DeckManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardWizardWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeckManagerPage">

    <Grid>
        <!-- Define grid rows and columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="*" />
            <!-- Main content (Frame) -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <Label Content="Deck Manager" Margin="5"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="-5,10,5,10" Grid.Row="1">



            <StackPanel Name="CardButtonsPanel">
                <!-- Buttons will be dynamically added here -->
            </StackPanel>


        </ScrollViewer>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="2" Margin="10">
            <Button Content="Back" Width="200" Margin="5" Click="Manager_Back_Button_Click"/>
            <Button Content="New Card" Width=" 200" Margin="5" Click="Manager_New_Card_Button_Click"/>
            <Label Name="Deckname" Content="" Margin="5" FontSize="20"/>
        </StackPanel>
    </Grid>
</Page>
